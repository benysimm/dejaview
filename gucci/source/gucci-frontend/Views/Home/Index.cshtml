            //    padding: {
            //        right: 320
            //    }
            //});

            var view = new MapView({
                container: "simple-map-div",
                map: map,
                zoom: 12,
                center: [149.081146, -35.325390],
                zoom: 10
            });

            var directions = new Directions({
                view: view
            });
            view.ui.add(directions, "top-right");

            console.log('MapView done');
        });

        console.log('testing');
    </script>
