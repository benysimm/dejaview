    <script type="text/javascript">

        require([
            "esri/Map",
            "esri/views/MapView",
            "esri/widgets/Directions",
            "dojo/domReady!"
        ], function (Map, MapView, Directions) {
            
            var map = new Map({
                basemap: "streets-navigation-vector"
            });

            console.log('Creating MapView');

            //var view = new MapView({
            //    container: "simple-map-div",
